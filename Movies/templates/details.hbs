{{>header}}
<div id="detailsMovie">
    <h1>Details</h1>
    {{#with movie}}
    <div class="movie">
        <h2>Title: {{title}}</h2>
        <img
            src="{{image}}">
        <p>{{description}}</p>
        {{#if genres}}
        <h2>Genres</h2>
        <ul class="genres">
            <li>{{genres}}</li>
        </ul>
        {{/if}}
        <p>Available Tickets: {{tickets}}</p>
        <button><a href="#/buy/{{objectId}}?origin={{@root.origin}}">Buy Ticket</a></button>
    </div>
    {{/with}}
</div>
{{>footer}}